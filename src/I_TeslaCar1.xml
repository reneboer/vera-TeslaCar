				return 4, nil
			</job>
		</action>
		<action>
			<name>startClimate</name>
			<serviceId>urn:rboer-com:serviceId:TeslaCar1</serviceId>
			<job>
				CarModule.StartAction('startClimate')
				return 4, nil
			</job>
		</action>
		<action>
			<name>stopClimate</name>
			<serviceId>urn:rboer-com:serviceId:TeslaCar1</serviceId>
			<job>
				CarModule.StartAction('stopClimate')
				return 4, nil
			</job>
		</action>
		<action>
			<name>updateSoftware</name>
			<serviceId>urn:rboer-com:serviceId:TeslaCar1</serviceId>
