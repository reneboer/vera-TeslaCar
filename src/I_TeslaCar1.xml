				CarModule.StartAction('updateSoftware')
				return 4, nil
			</job>
		</action>
		<action>
			<name>SetAutoSoftwareInstall</name>
			<serviceId>urn:rboer-com:serviceId:TeslaCar1</serviceId>
			<run>
				var.Set("AutoSoftwareInstall",lul_settings.newTargetValue or "0")
			</run>
		</action>
		<action>
			<name>Reset</name>
			<serviceId>urn:rboer-com:serviceId:TeslaCar1</serviceId>
			<run>
				CarModule.Reset()
				return 4, nil
			</run>
		</action>
		<action>
			<name>Login</name>
			<serviceId>urn:rboer-com:serviceId:TeslaCar1</serviceId>
			<job>
				CarModule.Login()
				return 4, nil
			</job>
		</action>
		<action>
			<name>Poll</name>
			<serviceId>urn:rboer-com:serviceId:TeslaCar1</serviceId>
			<job>
				CarModule.Poll()
				return 4, nil
			</job>
